
@{
    ViewData["Title"] = "MST_ExpenseTypeAddEdit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model GNForm3C_.Areas.MST_ExpenseType.Models.MST_ExpenseTypeModel;

<!--begin::Toolbar-->
<div id="kt_app_toolbar" class="app-toolbar py-3 py-lg-6">
    <!--begin::Toolbar container-->
    <div id="kt_app_toolbar_container" class="app-container container-fluid d-flex flex-stack">
        <!--begin::Page title-->
        <div class="page-title d-flex flex-column justify-content-center flex-wrap me-3">
            <!--begin::Title-->
            <h1 class="page-heading d-flex text-dark fw-bold fs-3 flex-column justify-content-center my-0">ExpenseType</h1>
            <!--end::Title-->
            <!--begin::Breadcrumb-->
            <ul class="breadcrumb breadcrumb-separatorless fw-semibold fs-7 my-0 pt-1">
                <!--begin::Item-->
                <li class="breadcrumb-item text-muted">
                    <a asp-controller="Home" asp-action="Index" class="text-muted text-hover-primary">Home</a>
                </li>
                <!--end::Item-->
                <!--begin::Item-->
                <li class="breadcrumb-item">
                    <span class="bullet bg-gray-400 w-5px h-2px"></span>
                </li>
                <!--end::Item-->
                <!--begin::Item-->
                <li class="breadcrumb-item text-muted">
                    <a asp-area="MST_ExpenseType" asp-controller="MST_ExpenseType" asp-action="Index" class="text-muted text-hover-primary">ExpenseType</a>
                </li>
                <!--end::Item-->
                <!--begin::Item-->
                <li class="breadcrumb-item">
                    <span class="bullet bg-gray-400 w-5px h-2px"></span>
                </li>
                <!--end::Item-->
                <!--begin::Item-->
                <li class="breadcrumb-item text-muted">@TempData["Action"] ExpenseType</li>
                <!--end::Item-->
            </ul>
            <!--end::Breadcrumb-->
        </div>
        <!--end::Page title-->
    </div>
    <!--end::Toolbar container-->
</div>
<!--end::Toolbar-->

<!--begin::Content-->
<div id="kt_app_content" class="app-content flex-column-fluid">
<!--begin::Content container-->
<div id="kt_app_content_container" class="app-container container-fluid">
    <div class="card">
        <div class="card-body p-5 px-lg-10 py-lg-7">
            <div>
                    <form method="post" asp-area="MST_ExpenseType" asp-controller="MST_ExpenseType" asp-action="Save">
                    <div asp-validation-summary="All" class="text-danger"></div>
                        @Html.HiddenFor(y=>y.ExpenseTypeID)

                        <!--begin::Input group-->
                        <div class="d-flex flex-column mb-8 fv-row">
                            <!--begin::Label-->
                            <label class="d-flex align-items-center fs-6 fw-semibold mb-2" asp-for="HospitalID">
                                <span class="text-danger">*</span>Hospital Name
                                <i class="fas fa-exclamation-circle ms-2 fs-7" data-bs-toggle="tooltip" title="used for select hospital"></i>
                            </label>
                            <!--end::Label-->
                            <div class="col-12 col-md-12 fv-row">
                                <select class="form-select form-select-solid" data-control="select2" data-hide-search="true" data-placeholder="Select Hospital" asp-for="HospitalID" asp-items="@(new SelectList(ViewBag.HospitalDropDown,"HospitalID","Hospital"))">
                                    <option value="">Select Hospital</option>
                                </select>
                            </div>
                            <span class="text-danger" asp-validation-for="HospitalID"></span>
                        </div>
                        <!--end::Input group-->

                    <!--begin::Input group-->
                    <div class="d-flex flex-column mb-8 fv-row">
                        <!--begin::Label-->
                        <label class="d-flex align-items-center fs-6 fw-semibold mb-2" asp-for="ExpenseType">
                                <span class="text-danger">*</span>ExpenseType 
                            <i class="fas fa-exclamation-circle ms-2 fs-7" data-bs-toggle="tooltip" title="it accepts only unique ExpenseType"></i>
                        </label>
                        <!--end::Label-->
                        <input type="text" class="form-control form-control-solid" asp-for="ExpenseType" placeholder="Enter User Name" autocomplete="off" />
                            <span class="text-danger" asp-validation-for="ExpenseType"></span>
                    </div>
                    <!--end::Input group-->

                    <!--begin::Input group-->
                    <div class="d-flex flex-column mb-8 fv-row">
                            <!--begin::Label-->
                            <label class="d-flex align-items-center fs-6 fw-semibold mb-2" asp-for="Remarks">
                                <span class="text-danger">*</span>Remarks 
                                <i class="fas fa-exclamation-circle ms-2 fs-7" data-bs-toggle="tooltip" title="used for select Remarks"></i>
                            </label>
                            <!--end::Label-->
                            <input type="text" class="form-control form-control-solid" asp-for="Remarks" placeholder="Enter Remarks" autocomplete="off" />
                            <span class="text-danger" asp-validation-for="Remarks"></span>
                        </div>
                    <!--end::Input group-->

                    <!--begin::Actions-->
                    <div>
                        <button type="submit" class="btn btn-primary" style="margin-right:5px;">
                            <span class="indicator-label">Submit</span>
                        </button>
                            <a type="submit" class="btn btn-light me-3" asp-area="MST_ExpenseType" asp-controller="MST_ExpenseType" asp-action="Index">
                            Back to List
                        </a>
                    </div>
                    <!--end::Actions-->
                </form>
            </div>
        </div>
    </div>
</div>
<!--end::Content container-->
</div>
<!--end::Content-->


@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}