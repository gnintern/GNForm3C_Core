@using GNForm3C_.Areas.ACC_Income.Models;
@model GNForm3C_.Areas.ACC_Income.Models.ACC_IncomeModel;
@using GNForm3C_.BAL;

<!--begin::Table-->
<table class="table align-middle table-row-dashed fs-6 gy-3 table-responsive table-responsive-md Freeze-Table" id="kt_ecommerce_report_customer_orders_table">
    <thead>
        <!--begin::Table row-->
        <tr class="text-start text-dark fw-bold fs-5">
            <th>@CommonVariables.HospitalNamelabel</th>
            <th>@CommonVariables.IncomeTypelabel</th>
            <th>@CommonVariables.Amountlabel</th>
            <th>@CommonVariables.IncomeDatelabel</th>
            <th>@CommonVariables.FinancialYearNamelabel</th>
            <th class="min-w-50px">@CommonVariables.notelabel</th>
            <th>@CommonVariables.Created</th>
            <th>@CommonVariables.Modified</th>
            <th class="text-center">@CommonVariables.Actionlabel</th>
        </tr>
    </thead>
    <tbody class="fw-semibold text-dark-600 font-weight-normal">
        @foreach (ACC_IncomeModel dr in ViewBag.IncomeList)
        {
            <tr>
                <td>@dr.Hospital</td>
                <td>@dr.IncomeType</td>
                <td>@dr.Amount</td>
                <td>@Convert.ToDateTime(dr.Date).ToString("dd-MM-yyyy")</td>
                <td>@dr.FinYearName</td>
                <td>@dr.Note</td>
                <td>@Convert.ToDateTime(dr.Created).ToString("dd-MM-yyyy")</td>
                <td>@Convert.ToDateTime(dr.Modified).ToString("dd-MM-yyyy")</td>

                <td class="text-center">
                    <a onclick="ShowDetails(this)" data-url="/ACC_Income/IncomeDetail" data-name="#incomeDetails" id="@CommonFunctions.EncryptBase64(dr.IncomeID.ToString())"
                       data-bs-toggle="tooltip" data-bs-placement="right" data-bs-title="View" class="fs-1 cursor-pointer" style="position:relative;top:5px;">
                        <i class="fa-regular fa-file fa-sm"></i>
                    </a>
                    <a class="text-decoration-none text-primary edit-button"
                       data-bs-toggle="tooltip"
                       data-bs-placement="left" data-bs-title="Edit"
                       asp-area="ACC_Income" asp-controller="ACC_Income" asp-action="Add" asp-route-IncomeID="@CommonFunctions.EncryptBase64(dr.IncomeID.ToString())">
                        <svg xmlns="http://www.w3.org/2000/svg" width="20"
                             height="20" fill="currentColor"
                             class="bi bi-pencil-square" viewBox="0 0 16 16">
                            <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z" />
                            <path fill-rule="evenodd"
                                  d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z" />
                        </svg>
                    </a>
                    <a class="text-decoration-none text-danger"
                       data-bs-toggle="tooltip" data-bs-placement="right"
                       data-bs-title="Delete"
                       asp-area="ACC_Income" asp-controller="ACC_Income" asp-action="Delete" asp-route-IncomeID="@CommonFunctions.EncryptBase64(dr.IncomeID.ToString())" onclick="return confirm('Are You sure delete it!!!')">
                        <svg xmlns="http://www.w3.org/2000/svg" width="20"
                             height="20" fill="currentColor" class="bi bi-trash3"
                             viewBox="0 0 16 16">
                            <path d="M6.5 1h3a.5.5 0 0 1 .5.5v1H6v-1a.5.5 0 0 1 .5-.5ZM11 2.5v-1A1.5 1.5 0 0 0 9.5 0h-3A1.5 1.5 0 0 0 5 1.5v1H2.506a.58.58 0 0 0-.01 0H1.5a.5.5 0 0 0 0 1h.538l.853 10.66A2 2 0 0 0 4.885 16h6.23a2 2 0 0 0 1.994-1.84l.853-10.66h.538a.5.5 0 0 0 0-1h-.995a.59.59 0 0 0-.01 0H11Zm1.958 1-.846 10.58a1 1 0 0 1-.997.92h-6.23a1 1 0 0 1-.997-.92L3.042 3.5h9.916Zm-7.487 1a.5.5 0 0 1 .528.47l.5 8.5a.5.5 0 0 1-.998.06L5 5.03a.5.5 0 0 1 .47-.53Zm5.058 0a.5.5 0 0 1 .47.53l-.5 8.5a.5.5 0 1 1-.998-.06l.5-8.5a.5.5 0 0 1 .528-.47ZM8 4.5a.5.5 0 0 1 .5.5v8.5a.5.5 0 0 1-1 0V5a.5.5 0 0 1 .5-.5Z" />
                        </svg>
                    </a>
                </td>

            </tr>
        }
    </tbody>
</table>
<!--end::Table-->
