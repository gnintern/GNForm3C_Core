@model GNForm3C_.Areas.MST_ReceiptType.Models.MST_ReceiptTypeModel;
@using GNForm3C_.BAL;

<form method="post">
    <div class="d-flex row">

        <!--begin::Input group-->
        <div class="row mb-8">
            <!--begin::Col-->
            <div class="col-6 col-md-6 fv-row">
                <select class="form-select form-select-solid" data-control="select2"   asp-for="HospitalID" asp-items="@(new SelectList(ViewBag.HospitalDropDown,"HospitalID","Hospital"))" disabled>
                </select>
            </div>
            <!--end::Col-->
            <!--begin::Col-->
            <div class="col-6 col-md-6 fv-row">
                <!--begin::Input-->
                <input type="search" class="form-control form-control-solid"
                       name="ReceiptTypeName" asp-for="ReceiptTypeName" placeholder="Enter Receipt Type"
                       autocomplete="off" />
                <!--end::Input-->
            </div>
            <!--end::Col-->
        </div>
        <!--end::Input group-->

        <div class="col-lg-4">
            <button type="submit" class="@CommonVariables.searchbtncolor"
                    style="margin-right:15px;" asp-area="MST_ReceiptType" asp-controller="MST_ReceiptType" asp-action="Index">
                <span class="indicator-label">Search</span>
            </button>
            <a type="submit" class="@CommonVariables.clearbtncolor me-3"
               asp-area="MST_ReceiptType" asp-controller="MST_ReceiptType" asp-action="Index">
                Clear
            </a>
        </div>
    </div>
</form>