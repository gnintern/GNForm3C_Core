<!--begin::Content-->
<div id="kt_app_content" class="app-content flex-column-fluid">
    <!--begin::Content container-->
    <div id="kt_app_content_container" class="app-container container-fluid">
        <!--begin::Card-->
        <div class="card">
            <!--begin::Card header-->
            <div class="card-header border-0">
                <!--begin::Card toolbar-->
                <div class="card-toolbar">
                    <!--begin::Toolbar-->
                    <div class="d-flex justify-content-end" data-kt-customer-table-toolbar="base">
                        <!--begin::Title-->
                        <span>
                            <h3 class="fs-x text-dark mt-5 mt-md-5">
                                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-list-nested" viewBox="0 0 16 16">
                                    <path fill-rule="evenodd" d="M4.5 11.5A.5.5 0 0 1 5 11h10a.5.5 0 0 1 0 1H5a.5.5 0 0 1-.5-.5zm-2-4A.5.5 0 0 1 3 7h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5zm-2-4A.5.5 0 0 1 1 3h10a.5.5 0 0 1 0 1H1a.5.5 0 0 1-.5-.5z" />
                                </svg>
                                RECEIPT TYPE LIST
                            </h3>
                        </span>
                        <!--end::Title-->
                    </div>
                    <!--end::Toolbar-->
                </div>
                <!--end::Card toolbar-->
                <!--begin::Card title-->
                <div class="card-title">
                    <!--begin::Search-->
                    <div class="d-flex align-items-center position-relative">
                        <!--begin::Svg Icon | path: icons/duotune/general/gen021.svg-->
                        <span class="svg-icon svg-icon-1 position-absolute ms-6">
                            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                <rect opacity="0.5" x="17.0365" y="15.1223" width="8.15546" height="2" rx="1" transform="rotate(45 17.0365 15.1223)" fill="currentColor" />
                                <path d="M11 19C6.55556 19 3 15.4444 3 11C3 6.55556 6.55556 3 11 3C15.4444 3 19 6.55556 19 11C19 15.4444 15.4444 19 11 19ZM11 5C7.53333 5 5 7.53333 5 11C5 14.4667 7.53333 17 11 17C14.4667 17 17 14.4667 17 11C17 7.53333 14.4667 5 11 5Z" fill="currentColor" />
                            </svg>
                        </span>
                        <!--end::Svg Icon-->
                        <input type="text" data-kt-customer-table-filter="search" class="form-control form-control-solid w-250px ps-15" placeholder="Search ReceiptType" id="myInput" />
                    </div>
                    <!--end::Search-->
                </div>
                <!--begin::Card title-->
            </div>
            <!--end::Card header-->
            <!--begin::Card body-->
            <div class="card-body pt-0">
                <hr />
                <!--begin::Table-->
                <table class="table align-middle table-row-dashed fs-6 gy-3" id="kt_customers_table">
                    <thead>
                        <!--begin::Table row-->
                        <tr class="text-start text-dark fw-bold fs-7 text-uppercase gs-0">
                            <th>Receipt Type</th>
                            <th>Print Name</th>
                            <th>Default</th>                   
                            <th>Remarks</th>
                            <th>Hospital</th>
                            <th>Created</th>
                            <th>Modified</th>
                            <th class="text-center">Action</th>
                        </tr>
                    </thead>
                    <tbody class="fw-semibold text-dark-600 font-weight-normal" id="myTable">
                        @foreach (MST_ReceiptTypeModel dr in ViewBag.ReceiptTypeList)
                        {
                            <tr>
                                <td>@dr.ReceiptTypeName</td>
                                <td>@dr.PrintName</td>                               
                                <td>
                                    @if (dr.IsDefault == true)
                                    {
                                        <h1 class="badge badge-light-success badge-circle fw-normal fs-6">Yes</h1>

                                    }
                                    else
                                    {
                                        <h1 class="badge badge-light-danger badge-circle fw-normal fs-6">No</h1>
                                    }
                                </td>   
                                <td>@dr.Remarks</td>
                                <td>@dr.Hospital</td>
                                <td>@Convert.ToDateTime(dr.Created).ToString("dd-MM-yyyy")</td>
                                <td>@Convert.ToDateTime(dr.Modified).ToString("dd-MM-yyyy")</td>
                                <td class="text-center">
                                    <a class="text-decoration-none text-primary edit-button" style="padding-right:1px;"
                                       data-bs-toggle="tooltip"
                                       data-bs-placement="left" data-bs-title="Edit"
                                   asp-area="MST_ReceiptType" asp-controller="MST_ReceiptType" asp-action="Add" asp-route-ReceiptTypeID="@CommonFunctions.EncryptBase64(dr.ReceiptTypeID.ToString())">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="20"
                                             height="20" fill="currentColor"
                                             class="bi bi-pencil-square" viewBox="0 0 16 16">
                                            <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z" />
                                            <path fill-rule="evenodd"
                                                  d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z" />
                                        </svg>
                                    </a>&nbsp;
                                    <a class="text-decoration-none text-danger"
                                       data-bs-toggle="tooltip" data-bs-placement="right"
                                       data-bs-title="Delete"
                                   asp-area="MST_ReceiptType" asp-controller="MST_ReceiptType" asp-action="Delete" asp-route-ReceiptTypeID="@CommonFunctions.EncryptBase64(dr.ReceiptTypeID.ToString())" onclick="return confirm('Are You sure delete it!!!')">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="20"
                                             height="20" fill="currentColor" class="bi bi-trash3"
                                             viewBox="0 0 16 16">
                                            <path d="M6.5 1h3a.5.5 0 0 1 .5.5v1H6v-1a.5.5 0 0 1 .5-.5ZM11 2.5v-1A1.5 1.5 0 0 0 9.5 0h-3A1.5 1.5 0 0 0 5 1.5v1H2.506a.58.58 0 0 0-.01 0H1.5a.5.5 0 0 0 0 1h.538l.853 10.66A2 2 0 0 0 4.885 16h6.23a2 2 0 0 0 1.994-1.84l.853-10.66h.538a.5.5 0 0 0 0-1h-.995a.59.59 0 0 0-.01 0H11Zm1.958 1-.846 10.58a1 1 0 0 1-.997.92h-6.23a1 1 0 0 1-.997-.92L3.042 3.5h9.916Zm-7.487 1a.5.5 0 0 1 .528.47l.5 8.5a.5.5 0 0 1-.998.06L5 5.03a.5.5 0 0 1 .47-.53Zm5.058 0a.5.5 0 0 1 .47.53l-.5 8.5a.5.5 0 1 1-.998-.06l.5-8.5a.5.5 0 0 1 .528-.47ZM8 4.5a.5.5 0 0 1 .5.5v8.5a.5.5 0 0 1-1 0V5a.5.5 0 0 1 .5-.5Z" />
                                        </svg>
                                    </a>
                                </td>

                            </tr>
                        }
                    </tbody>
                </table>
                <!--end::Table-->
            </div>
            <!--end::Card body-->
        </div>
        <!--end::Card-->
    </div>
    <!--end::Content container-->
</div>
<!--end::Content-->
@section Scripts{
    <script>
        $(document).ready(function () {
            $("#myInput").on("keyup", function () {
                var value = $(this).val().toLowerCase();
                $("#myTable tr").filter(function () {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });
        });
    </script>
}