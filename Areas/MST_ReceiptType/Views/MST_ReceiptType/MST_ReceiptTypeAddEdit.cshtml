@using GNForm3C_.BAL;
@{
	ViewData["Title"] = TempData["Action"] + " Receipt Type";
	Layout = "~/Views/Shared/_Layout.cshtml";
}
@model GNForm3C_.Areas.MST_ReceiptType.Models.MST_ReceiptTypeModel;

<!--begin::Toolbar-->
<div id="kt_app_toolbar" class="app-toolbar py-3 py-lg-6">
	<!--begin::Toolbar container-->
	<div id="kt_app_toolbar_container" class="app-container container-fluid d-flex flex-stack">
		<!--begin::Page title-->
		<div class="page-title d-flex flex-column justify-content-center flex-wrap me-3">
			<!--begin::Title-->
			<h1 class="page-heading d-flex text-dark fw-bold fs-3 flex-column justify-content-center my-0">Receipt Type</h1>
			<!--end::Title-->
			<!--begin::Breadcrumb-->
			<ul class="breadcrumb breadcrumb-separatorless fw-semibold fs-7 my-0 pt-1">
				<!--begin::Item-->
				<li class="breadcrumb-item text-muted">
					<a asp-controller="Home" asp-action="Index" class="text-muted text-hover-primary">Home</a>
				</li>
				<!--end::Item-->
				<!--begin::Item-->
				<li class="breadcrumb-item">
					<span class="bullet bg-gray-400 w-5px h-2px"></span>
				</li>
				<!--end::Item-->
				<!--begin::Item-->
				<li class="breadcrumb-item text-muted">
					<a asp-area="MST_ReceiptType" asp-controller="MST_ReceiptType" asp-action="Index" class="text-muted text-hover-primary">Receipt Types</a>
				</li>
				<!--end::Item-->
				<!--begin::Item-->
				<li class="breadcrumb-item">
					<span class="bullet bg-gray-400 w-5px h-2px"></span>
				</li>
				<!--end::Item-->
				<!--begin::Item-->
				<li class="breadcrumb-item fw-bolder">@TempData["Action"] Receipt Type</li>
				<!--end::Item-->
			</ul>
			<!--end::Breadcrumb-->
		</div>
		<!--end::Page title-->
	</div>
	<!--end::Toolbar container-->
</div>
<!--end::Toolbar-->


<form method="post" asp-area="MST_ReceiptType" asp-controller="MST_ReceiptType" asp-action="Save">
	<!--begin: Validation-->
	<div class="col-md-12 container">
		<div id="validatediv" asp-validation-summary="All" class="text-danger"></div>
	</div>
	<!--end: Validation-->
	<!--begin::Content-->
	<div id="kt_app_content" class="app-content flex-column-fluid">
		<!--begin::Content container-->
		<div id="kt_app_content_container" class="app-container container-fluid">
			<div class="card">
				<div class="card-body p-5 px-lg-10 py-lg-7">
					<div>
						@Html.HiddenFor(x=>x.ReceiptTypeID)

						<!--begin::Input group-->
						<div class="d-flex flex-column mb-8 fv-row">
							<!--begin::Label-->
							<label class="d-flex align-items-center fs-6 fw-semibold mb-2" asp-for="HospitalID">
								<span class="text-danger">*</span>@CommonVariables.HospitalNamelabel
								<i class="fas fa-exclamation-circle ms-2 fs-7" data-bs-toggle="tooltip"  data-bs-placement="right" title="used for select hospital"></i>
							</label>
							<!--end::Label-->
							<div class="col-12 col-md-12 fv-row">
								<select class="form-select form-select-solid " data-control="select2" placeholder="Select Hospital" asp-for="HospitalID" asp-items="@(new SelectList(ViewBag.HospitalDropDown,"HospitalID","Hospital"))" disabled>
								</select>
							</div>
							<span class="text-danger field-validation-error" asp-validation-for="HospitalID"></span>
						</div>
						<!--end::Input group-->
						<!--begin::Input group-->
						<div class="d-flex flex-column mb-8 fv-row">
							<!--begin::Label-->
							<label class="d-flex align-items-center fs-6 fw-semibold mb-2" asp-for="ReceiptTypeName">
								<span class="text-danger">*</span>@CommonVariables.ReceiptTypelabel
								<i class="fas fa-exclamation-circle ms-2 fs-7" data-bs-toggle="tooltip"  data-bs-placement="right" title="it accepts only unique Receipt Type"></i>
							</label>
							<!--end::Label-->
							<input type="text" class="form-control form-control-solid" asp-for="ReceiptTypeName" placeholder="Enter Receipt Type" autocomplete="off" />
							<span class="text-danger field-validation-error" asp-validation-for="ReceiptTypeName"></span>
						</div>
						<!--end::Input group-->

							<!--begin::Input group-->
						<div class="d-flex flex-column mb-8 fv-row">
								<!--begin::Label-->
							<label class="d-flex align-items-center fs-6 fw-semibold mb-2" asp-for="PrintName">
								<span class="text-danger">*</span>@CommonVariables.PrintNameReceiptlabel
								<i class="fas fa-exclamation-circle ms-2 fs-7" data-bs-toggle="tooltip"  data-bs-placement="right" title="it accepts only Print name"></i>
							</label>
								<!--end::Label-->
								<input type="text" class="form-control form-control-solid" asp-for="PrintName" placeholder="Enter Print Name" autocomplete="off" />
							<span class="text-danger field-validation-error" asp-validation-for="PrintName"></span>
							</div>
							<!--end::Input group-->

						<!--begin::Input group-->
						<div class="d-flex flex-column mb-8 fv-row">
							<div class="form-check">
								<input class="form-check-input" type="checkbox" id="IsDefaultCheckbox" value="" />
								<label class="d-flex align-items-center fs-6 fw-semibold mb-2" for="IsDefaultCheckbox">Is @CommonVariables.Defaultlabel?</label>
								<input type="hidden" asp-for="IsDefault" />
							</div>

						</div>
						<!--end::Input group-->
						<!--begin::Input group-->
						<div class="d-flex flex-column mb-8 fv-row">
							<!--begin::Label-->
							<label class="d-flex align-items-center fs-6 fw-semibold mb-2" asp-for="Remarks ">
								@CommonVariables.Remarklabel
								<i class="fas fa-exclamation-circle ms-2 fs-7" data-bs-toggle="tooltip"  data-bs-placement="right" title="it accepts only Remarks"></i>
							</label>
							<!--end::Label-->
							<textarea class="form-control form-control-solid" asp-for="Remarks" placeholder="Enter Remarks" autocomplete="off"></textarea>
						</div>
						<!--end::Input group-->
						<!--begin::Actions-->
						<div>
							<button onclick="fn1()" type="submit" class="@CommonVariables.SaveBtnColor" style="margin-right:5px;">
								<span class="indicator-label">@TempData["ButtonAction"]</span>
							</button>
							<a type="submit" class="@CommonVariables.BackToListBtnColor me-3" asp-area="MST_ReceiptType" asp-controller="MST_ReceiptType" asp-action="Index">
								Back to List
							</a>
						</div>
						<!--end::Actions-->
					</div>
				</div>
			</div>
		</div>
		<!--end::Content container-->
	</div>
	<!--end::Content-->
</form>
@section Scripts{
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}

	<script>
		// Get the initial value from the model, default to false if Model or Model.IsDefault is null
		var initialValue = @Html.Raw(Json.Serialize(Model?.IsDefault ?? false));

		// Set the initial state of the checkbox
		document.getElementById('IsDefaultCheckbox').checked = initialValue;

		// Add script to update the hidden field when the checkbox changes
		document.getElementById('IsDefaultCheckbox').addEventListener('change', function () {
			var hiddenField = document.querySelector('[name="IsDefault"]');
			hiddenField.value = this.checked ? 'true' : 'false';
		});
	</script>

	<script>
		function fn1() {
			const hospitalIDInput = document.getElementById('HospitalID');
			const receiptTypeNameInput = document.getElementById('ReceiptTypeName');
			const printNameInput = document.getElementById('PrintName');

			// Check if all input fields have values
			if (hospitalIDInput.value && receiptTypeNameInput.value && printNameInput.value) {
				// All fields are filled, so don't show validation line
				document.getElementById('validatediv').classList.remove('alert alert-danger');
			} else {
				// At least one field is empty, so show validation line
				document.getElementById('validatediv').classList = "alert alert-danger";
			}
		}
	</script>
}

