@using GNForm3C_.BAL;
@model GNForm3C_.Areas.SEC_User.Models.SEC_UserModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}
<!--begin::Body-->
<div class="d-flex flex-column-fluid flex-lg-row-auto justify-content-center justify-content-lg-end p-12">
	<!--begin::Wrapper-->
	<div class="bg-body d-flex flex-center rounded-4 w-md-600px p-10">
		<!--begin::Content-->
		<div class="w-md-400px">
			<!--begin::Form-->
			<form method="post" class="form w-100" novalidate="novalidate" id="kt_sign_in_form" asp-area="SEC_User" asp-controller="SEC_User" asp-action="SignIn">
				<!--begin::Heading-->
				<div class="text-center mb-11">
					<!--begin::Title-->
					<img alt="Logo" src=@CommonVariables.SlidebarImage class="h-30px app-sidebar-logo-default" />
					<h1 class="text-dark fw-bolder mb-3"></h1>
					<!--end::Title-->
				</div>
				<!--begin::Input group=-->
				<div class="fv-row mb-8">
					<!--begin::Email-->
					<select class="form-select form-select-solid" disabled data-control="select2" data-hide-search="true" data-placeholder="Select Finance Year" asp-for="MST_FinYear.FinYearID" asp-items="@(new SelectList(ViewBag.FinYearDropDown,"FinYearID","FinYearName"))">
						<option value="">Select Finance Year</option> 
					</select>
					<!--end::Email-->
				</div>
				<!--end::Input group=-->
				<!--begin::Input group=-->
				<div class="fv-row mb-8">
					<select class="form-select form-select-solid" disabled data-control="select2" data-hide-search="true" data-placeholder="Select Hospital" asp-for="MST_Hospital.HospitalID" asp-items="@(new SelectList(ViewBag.HospitalDropDown,"HospitalID","Hospital"))">
						<option value="">Select Hospital</option>
					</select>
				</div>
				<!--end::Input group=-->
				<!--begin::Input group=-->
				<div class="fv-row mb-8">
					<!--begin::Email-->
					<input type="text" placeholder="User Name"  asp-for="UserName" autocomplete="off" class="form-control bg-transparent" />
					<!--end::Email-->
					<span asp-validation-for="UserName" class="text-danger">

						@if(TempData["UserName"] != null)
						{
							@Html.Raw(TempData["UserName"])
						}
					</span>
				</div>
				<!--end::Input group=-->
				<div class="fv-row mb-3">
					<!--begin::Password-->
					<input type="password" placeholder="Password"  asp-for="Password" autocomplete="off" class="form-control bg-transparent" />
					<span asp-validation-for="Password" class="text-danger">

						@if(TempData["Password"] != null)
						{
							@Html.Raw(TempData["Password"])
						}
					</span>
					<!--end::Password-->
				</div>
				<!--end::Input group=-->
				<!--begin::Wrapper-->
				<div class="d-flex flex-stack flex-wrap gap-3 fs-base fw-semibold mb-8">
					<div></div>
					<!--begin::Link-->
					<a href="#" class="link-primary">Forgot Password ?</a>
					<!--end::Link-->
				</div>
				<!--end::Wrapper-->
				<!--begin::Submit button-->
				<div class="d-grid mb-10">
					<button type="submit" class="btn btn-primary">
						<!--begin::Indicator label-->
						<span class="indicator-label">Sign In</span>
						<!--end::Indicator label-->
						<!--begin::Indicator progress-->
						<span class="indicator-progress">
							Please wait...
							<span class="spinner-border spinner-border-sm align-middle ms-2"></span>
						</span>
						<!--end::Indicator progress-->
					</button>
				</div>
				<!--end::Submit button-->
			</form>
			<!--end::Form-->
		</div>
		<!--end::Content-->
	</div>
	<!--end::Wrapper-->
</div>
<!--end::Body-->