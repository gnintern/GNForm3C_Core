
@{
    ViewData["Title"] = "SEC_UserAddEdit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model GNForm3C_.Areas.SEC_User.Models.SEC_UserModel;



@* Changes with kk *@
<!--begin::Toolbar-->
