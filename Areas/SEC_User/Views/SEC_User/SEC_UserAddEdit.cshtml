@{
	ViewData["Title"] =@TempData["Action"]+" User";
	Layout = "~/Views/Shared/_Layout.cshtml";
}
@model GNForm3C_.Areas.SEC_User.Models.SEC_UserModel;

<!--begin::Toolbar-->
<div id="kt_app_toolbar" class="app-toolbar py-3 py-lg-6">
	<!--begin::Toolbar container-->
	<div id="kt_app_toolbar_container" class="app-container container-fluid d-flex flex-stack">
		<!--begin::Page title-->
		<div class="page-title d-flex flex-column justify-content-center flex-wrap me-3">
			<!--begin::Title-->
			<h1 class="page-heading d-flex text-dark fw-bold fs-3 flex-column justify-content-center my-0">User</h1>
			<!--end::Title-->
			<!--begin::Breadcrumb-->
			<ul class="breadcrumb breadcrumb-separatorless fw-semibold fs-7 my-0 pt-1">
				<!--begin::Item-->
				<li class="breadcrumb-item text-muted">
					<a asp-controller="Home" asp-action="Index" class="text-muted text-hover-primary"><i class="bi bi-house"></i> Home</a>
				</li>
				<!--end::Item-->
				<!--begin::Item-->
				<li class="breadcrumb-item">
					<span class="bullet bg-gray-400 w-5px h-2px"></span>
				</li>
				<!--end::Item-->
				<!--begin::Item-->
				<li class="breadcrumb-item text-muted">
					<a asp-area="SEC_User" asp-controller="SEC_User" asp-action="Index" class="text-muted text-hover-primary">User</a>
				</li>
				<!--end::Item-->
				<!--begin::Item-->
				<li class="breadcrumb-item">
					<span class="bullet w-5px h-2px"></span>
				</li>
				<!--end::Item-->
				<!--begin::Item-->
				<li class="breadcrumb-item  fw-bolder">@TempData["Action"] User</li>
				<!--end::Item-->
			</ul>
			<!--end::Breadcrumb-->
		</div>
		<!--end::Page title-->
	</div>
	<!--end::Toolbar container-->
</div>
<!--end::Toolbar-->

<form method="post" asp-area="SEC_User" asp-controller="SEC_User" asp-action="Save">
	<!--begin: Validation-->
	<div class="col-md-12 container">
		<div id="validatediv" asp-validation-summary="All" class="text-danger"></div>
	</div>
	<!--end: Validation-->
	<!--begin::Content-->
	<div id="kt_app_content" class="app-content flex-column-fluid">
		<!--begin::Content container-->
		<div id="kt_app_content_container" class="app-container container-fluid">
			<div class="card">
				<div class="card-body p-5 px-lg-10 py-lg-7">
					<div>
						@Html.HiddenFor(x=>x.UserID)

						<!--begin::Input group-->
						<div class="d-flex flex-column mb-8 fv-row">
							<!--begin::Label-->
							<label class="d-flex align-items-center fs-6 fw-semibold mb-2" asp-for="HospitalID">
								<span class="text-danger">*</span>&nbsp;Hospital Name
								<i class="fas fa-exclamation-circle ms-2 fs-7" data-bs-toggle="tooltip" title="Used For Select Hospital"></i>
							</label>
							<!--end::Label-->
							<div class="col-12 col-md-12 fv-row">
								<select class="form-select form-select-solid" data-control="select2" data-hide-search="true" data-placeholder="Select Hospital" asp-for="HospitalID" asp-items="@(new SelectList(ViewBag.HospitalDropDown,"HospitalID","Hospital"))">
									<option value="">Select Hospital</option>
								</select>
							</div>
							<span class="text-danger" asp-validation-for="HospitalID"></span>
						</div>
						<!--end::Input group-->
						<!--begin::Input group-->
						<div class="d-flex flex-column mb-8 fv-row">
							<!--begin::Label-->
							<label class="d-flex align-items-center fs-6 fw-semibold mb-2" asp-for="UserName">
								<span class="text-danger">*</span>&nbsp;User Name
								<i class="fas fa-exclamation-circle ms-2 fs-7" data-bs-toggle="tooltip" title="it accepts only unique user name"></i>
							</label>
							<!--end::Label-->
							<input type="text" class="form-control form-control-solid" asp-for="UserName" placeholder="Enter User Name" autocomplete="off" />
							<span class="text-danger" asp-validation-for="UserName"></span>
						</div>
						<!--end::Input group-->

						<!--begin::Input group-->
						<div class="row">
							<div class="fv-row mb-8 col-6 col-md-6" data-kt-password-meter="true">
								<!--begin::Label-->
								<label class="d-flex align-items-center fs-6 fw-semibold mb-2" asp-for="Password">
									<span class="text-danger">*</span>&nbsp;Password
									<i class="fas fa-exclamation-circle ms-2 fs-7" data-bs-toggle="tooltip" title="it accepts only unique user name"></i>
								</label>
								<!--end::Label-->
								<!--begin::Wrapper-->
								<div class="mb-1">
									<!--begin::Input wrapper-->
									<div class="position-relative mb-3">
										<input class="form-control form-control-solid" type="password" asp-for="Password" placeholder="Enter Password" autocomplete=" off" />
										<span class="text-danger" asp-validation-for="Password"></span>

										<span class="btn btn-sm btn-icon position-absolute translate-middle top-50 end-0 me-n2" data-kt-password-meter-control="visibility">
											<i class="bi bi-eye-slash fs-2"></i>
											<i class="bi bi-eye fs-2 d-none"></i>
										</span>
									</div>
									<!--end::Input wrapper-->
									<!--begin::Meter-->
									<div class="d-flex align-items-center mb-3" data-kt-password-meter-control="highlight">
										<div class="flex-grow-1 bg-secondary bg-active-success rounded h-5px me-2"></div>
										<div class="flex-grow-1 bg-secondary bg-active-success rounded h-5px me-2"></div>
										<div class="flex-grow-1 bg-secondary bg-active-success rounded h-5px me-2"></div>
										<div class="flex-grow-1 bg-secondary bg-active-success rounded h-5px"></div>
									</div>
									<!--end::Meter-->
								</div>
								<!--end::Wrapper-->
								<!--begin::Hint-->
								<div class="text-muted">Use 8 or more characters with a mix of letters, numbers &amp; symbols.</div>
								<!--end::Hint-->
							</div>

							<div class="fv-row mb-8 col-6 col-md-6" data-kt-password-meter="true">
								<!--begin::Label-->
								<label class="d-flex align-items-center fs-6 fw-semibold mb-2" asp-for="ConfirmPassword">
									<span class="text-danger">*</span>&nbsp;Confirm Password
									<i class="fas fa-exclamation-circle ms-2 fs-7" data-bs-toggle="tooltip" title="it accepts only unique user name"></i>

								</label>
								<!--end::Label-->
								<!--begin::Wrapper-->
								<div class="mb-1">
									<!--begin::Input wrapper-->
									<div class="position-relative mb-3">
										<input class="form-control form-control-solid" type="password" placeholder="Enter Confirm Password" asp-for="ConfirmPassword" autocomplete=" off" />
										<span class="btn btn-sm btn-icon position-absolute translate-middle top-50 end-0 me-n2" data-kt-password-meter-control="visibility">
											<i class="bi bi-eye-slash fs-2"></i>
											<i class="bi bi-eye fs-2 d-none"></i>
										</span>
										<span class="text-danger" asp-validation-for="ConfirmPassword"></span>

									</div>
									<!--end::Input wrapper-->
									<!--begin::Meter-->
									<div class="d-flex align-items-center mb-3" data-kt-password-meter-control="highlight">
										<div class="flex-grow-1 bg-secondary bg-active-success rounded h-5px me-2"></div>
										<div class="flex-grow-1 bg-secondary bg-active-success rounded h-5px me-2"></div>
										<div class="flex-grow-1 bg-secondary bg-active-success rounded h-5px me-2"></div>
										<div class="flex-grow-1 bg-secondary bg-active-success rounded h-5px"></div>
									</div>
									<!--end::Meter-->
								</div>
								<!--end::Wrapper-->
								<!--begin::Hint-->
								<div class="text-muted">Use 8 or more characters with a mix of letters, numbers &amp; symbols.</div>
								<!--end::Hint-->
							</div>
						</div>
						<!--end::Input group-->
						<div class="d-flex flex-column mb-8 fv-row">
							<label class="d-flex align-items-center fs-6 fw-semibold mb-2">
								<span class="text-danger">*</span>IsActive
								<i class="fas fa-exclamation-circle ms-2 fs-7" data-bs-toggle="tooltip" title="it accepts only unique user name"></i>
							</label>
							<div class="mt-2">
								<span class="m-3"><input type="radio" value="true" asp-for="IsActive" checked /> Yes</span>
								<span class="m-3"><input type="radio" value="false" asp-for="IsActive" /> No</span>
							</div>
							<span class="text-danger" asp-validation-for="IsActive"></span>
						</div>
						<!--begin::Actions-->
						<div>
							<button onclick="fn1()" type="submit" class="btn btn-primary" style="margin-right:5px;">
								<span class="indicator-label">Submit</span>
							</button>
							<a type="submit" class="btn btn-light me-3" asp-area="SEC_User" asp-controller="SEC_User" asp-action="Index">
								Back to List
							</a>
						</div>
						<!--end::Actions-->
					</div>
				</div>
			</div>
		</div>
		<!--end::Content container-->
	</div>
	<!--end::Content-->
</form>

@section Scripts{
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}

