                        <!--end::Actions-->

                        <div id="detailsContainer" style="display:none;">
                            <!--end::Input group-->
                            <div class="row">
                                <div class="mb-8 col-6 col-md-6 ">
                                    <!--begin::Label-->
                                    <label class="d-flex align-items-center fs-6 fw-semibold mb-2" asp-for="DateOfAdmission">
                                        Admission Date
                                        <i class="fas fa-exclamation-circle ms-2 fs-7" data-bs-toggle="tooltip" title="used for select Date"></i>
                                    </label>
                                    <!--end::Label-->
                                    <div class="col-12 col-md-12 ">
                                        <input type="date" class="form-control form-control-solid" asp-for="DateOfAdmission" />
                                    </div>
                                </div>

                                <div class="mb-8 col-6 col-md-6 ">
                                    <!--begin::Label-->
                                    <label class="d-flex align-items-center fs-6 fw-semibold mb-2" asp-for="DateOfDischarge">
                                        Discharge Date
                                        <i class="fas fa-exclamation-circle ms-2 fs-7" data-bs-toggle="tooltip" title="used for select Date"></i>
                                    </label>
                                    <!--end::Label-->
                                    <div class="col-12 col-md-12 ">
                                        <input type="date" class="form-control form-control-solid" asp-for="DateOfDischarge" />
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="fv-row mb-8 col-4 col-md-4" data-kt-password-meter="true">
                                    <!--begin::Label-->
                                    <label class="d-flex align-items-center fs-6 fw-semibold mb-2" asp-for="NoOfDays">
                                        No. Of Days
                                        <i class="fas fa-exclamation-circle ms-2 fs-7" data-bs-toggle="tooltip" title="used for Enter No. Of Days"></i>
                                    </label>
                                    <!--end::Label-->
                                    <div class="col-12 col-md-12 fv-row">
                                        <input type="number" asp-for="NoOfDays" class="form-control form-control-solid" />

                                    </div>
                                </div>

                                <div class="fv-row mb-8 col-4 col-md-4" data-kt-password-meter="true">
                                    <!--begin::Label-->
                                    <label class="d-flex align-items-center fs-6 fw-semibold mb-2" asp-for="Deposite">
                                        Advance
                                        <i class="fas fa-exclamation-circle ms-2 fs-7" data-bs-toggle="tooltip" title="used for Enter Advance"></i>
                                    </label>
                                    <!--end::Label-->
                                    <div class="col-12 col-md-12 fv-row">
                                        <input type="number" id="deposit" asp-for="Deposite" class="form-control form-control-solid" />

                                    </div>
                                </div>

                                <div class="fv-row mb-8 col-4 col-md-4" data-kt-password-meter="true">
                                    <!--begin::Label-->
                                    <label class="d-flex align-items-center fs-6 fw-semibold mb-2" asp-for="NetAmount">
                                        Net Amount
                                        <i class="fas fa-exclamation-circle ms-2 fs-7" data-bs-toggle="tooltip" title="used for Net Amount"></i>
                                    </label>
                                    <!--end::Label-->
                                    <div class="col-12 col-md-12 fv-row">
                                        <input type="number" id="netAmount" asp-for="NetAmount" class="form-control form-control-solid" />

                                    </div>
                                </div>
                            </div>
                            <!--begin::Actions-->
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!--end::Content container-->
    </div>
    <!--end::Content-->
</form>
@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        // Get references to the input fields
        const depositInput = document.getElementById('deposit');
        const netAmountInput = document.getElementById('netAmount');
        const totalAmountInput = document.getElementById('totalAmount');

        // Attach an event listener to both deposit and totalAmount input fields
        depositInput.addEventListener('input', updateNetAmount);
        totalAmountInput.addEventListener('input', updateNetAmount);

        // Function to update the net amount based on deposit and totalAmount
        function updateNetAmount() {
            const depositValue = parseFloat(depositInput.value) || 0;
            const totalAmountValue = parseFloat(totalAmountInput.value) || 0;

            // Calculate the net amount
            const netAmount = totalAmountValue - depositValue;

            // Update the netAmountInput value
            netAmountInput.value = netAmount;
        }
    </script>

    <script>
        function fn1() {
            document.getElementById("validatediv").classList = "alert alert-danger";
        }
    </script>

    <script>
        function toggleDetails() {
            var detailsContainer = document.getElementById("detailsContainer");
            var showDetailsBtn = document.getElementById("showDetailsBtn");

            if (detailsContainer.style.display === "none") {
                detailsContainer.style.display = "block";
                showDetailsBtn.innerText = "Hide Details";
            } else {
                detailsContainer.style.display = "none";
                showDetailsBtn.innerText = "Show Details";
            }
        }
    </script>

   


}