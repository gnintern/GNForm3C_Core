<form method="post" asp-area="ACC_Receipt" asp-controller="ACC_Receipt" asp-action="Save">

    <div class="col-md-12 container">
        <div id="validatediv" asp-validation-summary="All" class="text-danger"></div>
    </div>

    <!--Utla nu chokru End-->
    <!--begin::Content-->
    <div id="kt_app_content" class="app-content flex-column-fluid">
        <!--begin::Content container-->
        <div id="kt_app_content_container" class="app-container container-fluid">
            <div class="card">
                <div class="card-body p-5 px-lg-10 py-lg-7">
                    <div>

                        @Html.HiddenFor(x=>x.TransactionID)

                        <div class="row">
                            <div class="mb-8 col-6 col-md-6">
                                <!--begin::Label-->
                                <label class="d-flex align-items-center fs-6 fw-semibold mb-2" asp-for="SerialNo">
                                    <span class="text-danger">*</span> &nbsp;Serial No.
                                    <i class="fas fa-exclamation-circle ms-2 fs-7" data-bs-toggle="tooltip" title="used for Serial No"></i>
                                </label>
                                <!--end::Label-->
                                <div class="col-12 col-md-12 ">

                                    <input type="number" readonly asp-for="SerialNo" class="form-control form-control-solid" />
                                </div>
                                <span class="text-danger" asp-validation-for="SerialNo"></span>
                            </div>

                            <div class="mb-8 col-6 col-md-6 ">
                                <!--begin::Label-->
                                <label class="d-flex align-items-center fs-6 fw-semibold mb-2" asp-for="Date">
                                    <span class="text-danger">*</span> &nbsp;Entry Date
                                    <i class="fas fa-exclamation-circle ms-2 fs-7" data-bs-toggle="tooltip" title="used for select Date"></i>
                                </label>
                                <!--end::Label-->
                                <div class="col-12 col-md-12 ">
                                    <input type="date" class="form-control form-control-solid" asp-for="Date" readonly/>
                                </div>
                                <span class="text-danger" asp-validation-for="Date"></span>
                            </div>

                        </div>
                        <!--begin::Input group-->
                        <div class="row">
                            <div class="fv-row mb-8 col-6 col-md-6">
                                <!--begin::Label-->
                                <label class="d-flex align-items-center fs-6 fw-semibold mb-2" asp-for="HospitalID">
                                    <span class="text-danger">*</span> &nbsp;Hospital Name
                                    <i class="fas fa-exclamation-circle ms-2 fs-7" data-bs-toggle="tooltip" title="used for select Hospital"></i>
                                </label>
                                <!--end::Label-->
                                <div class="col-12 col-md-12 fv-row">
                                    <select class="form-select form-select-solid" data-control="select2"   asp-for="HospitalID" asp-items="@(new SelectList(ViewBag.HospitalDropDown,"HospitalID","Hospital"))">
                                        <option value="">Select Hospital</option>
                                    </select>
                                </div>
                                <span class="text-danger" asp-validation-for="HospitalID"></span>
                            </div>

                            <div class="fv-row mb-8 col-6 col-md-6" data-kt-password-meter="true">
                                <!--begin::Label-->
                                <label class="d-flex align-items-center fs-6 fw-semibold mb-2" asp-for="ReceiptTypeID">
                                    <span class="text-danger">*</span> &nbsp;Receipt Type
                                    <i class="fas fa-exclamation-circle ms-2 fs-7" data-bs-toggle="tooltip" title="used for select Receipt Type"></i>
                                </label>
                                <!--end::Label-->
                                <div class="col-12 col-md-12 fv-row">
                                    <select class="form-select form-select-solid" data-control="select2"  data-placeholder="Select Expense Type" asp-for="ReceiptTypeID" asp-items="@(new SelectList(ViewBag.ReceiptTypeDropDown,"ReceiptTypeID","ReceiptTypeName"))">
                                        <option value="">Select Receipt Type</option>
                                    </select>
                                </div>
                                <span class="text-danger" asp-validation-for="ReceiptTypeID"></span>
                            </div>
                        </div>
                        <!--end::Input group-->
                        <div class="row">
                            <!--begin::Input Hospital group-->
                            <div class="d-flex flex-column mb-8 fv-row">
                                <!--begin::Label-->
                                <label class="d-flex align-items-center fs-6 fw-semibold mb-2" asp-for="Patient">
                                    <span class="text-danger">*</span>&nbsp;Patient Name
                                    <i class="fas fa-exclamation-circle ms-2 fs-7" data-bs-toggle="tooltip" title="Used For Enter Patient Name"></i>
                                </label>
                                <!--end::Label-->
                                <input type="text" class="form-control form-control-solid" asp-for="Patient" placeholder="Enter Patient Name" autocomplete="off" />
                                <span class="text-danger" asp-validation-for="Patient"></span>
                            </div>
                            <!--end::Input Hospital group-->
                        </div>
                        <!--begin::Input group-->
                        <!--begin::Input group-->
                        <div class="d-flex flex-column mb-8 fv-row">
                            <!--begin::Label-->
                            <label class="d-flex align-items-center fs-6 fw-semibold mb-2" asp-for="TreatmentID">
                                <span class="text-danger">*</span>&nbsp;Treatment
                                <i class="fas fa-exclamation-circle ms-2 fs-7" data-bs-toggle="tooltip" title="Used For Select Treatment"></i>
                            </label>
                            <!--end::Label-->
                            <div class="col-12 col-md-12 fv-row">
                                <select class="form-select form-select-solid" data-control="select2"  data-placeholder="Select Treatment" asp-for="TreatmentID" asp-items="@(new SelectList(ViewBag.TreatmentDropDown,"TreatmentID","Treatment"))">
                                    <option value="">Select Treatment</option>
                                </select>
                            </div>
                            <span class="text-danger field-validation-error" asp-validation-for="TreatmentID"></span>
                        </div>
                        <!--end::Input group-->
                        <div class="row">

                            <div class="fv-row mb-8 col-6 col-md-6" data-kt-password-meter="true">
                                <!--begin::Label-->
                                <label class="d-flex align-items-center fs-6 fw-semibold mb-2" asp-for="Amount">
                                    <span class="text-danger">*</span> &nbsp;Amount
                                    <i class="fas fa-exclamation-circle ms-2 fs-7" data-bs-toggle="tooltip" title="used for Enter Amount"></i>
                                </label>
                                <!--end::Label-->
                                <div class="col-12 col-md-12 fv-row">
                                    <input type="number" id="totalAmount" asp-for="Amount" class="form-control form-control-solid" />

                                </div>
                                <span class="text-danger" asp-validation-for="Amount"></span>
                            </div>

                            <div class="fv-row mb-8 col-6 col-md-6" data-kt-password-meter="true">
                                <!--begin::Label-->
                                <label class="d-flex align-items-center fs-6 fw-semibold mb-2" asp-for="ReceiptNo">
                                    <span class="text-danger">*</span> &nbsp;Receipt No.
                                    <i class="fas fa-exclamation-circle ms-2 fs-7" data-bs-toggle="tooltip" title="used for Receipt No"></i>
                                </label>
                                <!--end::Label-->
                                <div class="col-12 col-md-12 fv-row">
                                    <input type="number" readonly asp-for="ReceiptNo" class="form-control form-control-solid" />

                                </div>
                                <span class="text-danger" asp-validation-for="ReceiptNo"></span>
                            </div>

                        </div>
                        <!--end::Input group-->
                        <!--begin::Input group-->
                        <div class="d-flex flex-column mb-8 fv-row">
                            <!--begin::Label-->
                            <label class="d-flex align-items-center fs-6 fw-semibold mb-2" asp-for="Remarks">
                                Remarks
                                <i class="fas fa-exclamation-circle ms-2 fs-7" data-bs-toggle="tooltip" title="it accepts only Remarks"></i>
                            </label>
                            <!--end::Label-->
                            <textarea class="form-control form-control-solid" asp-for="Remarks" placeholder="Enter Remarks" autocomplete="off"></textarea>
                        </div>


                       
                        <div class="mb-8">
                            <button type="submit" class="btn btn-primary" style="margin-right:5px;" onclick="fn1()">
                                <span class="indicator-label">Submit</span>
                            </button>
                            <a type="submit" class="btn btn-light me-3" asp-area="ACC_Receipt" asp-controller="ACC_Receipt" asp-action="Index">
                                Back to List
                            </a>
                                <button type="button" class="btn btn-success me-3" id="showDetailsBtn" onclick="toggleDetails()">
