<!--begin::Content-->
<div id="kt_app_content" class="app-content flex-column-fluid">
    <!--begin::Content container-->
    <div id="kt_app_content_container" class="app-container container-fluid">
        <!--begin::Card-->
        <div class="card">
            <!--begin::Card header-->
            <div class="card-header border-0">
                <!--begin::Card toolbar-->
                <div class="card-toolbar">
                    <!--begin::Toolbar-->
                    <div class="d-flex justify-content-end" data-kt-customer-table-toolbar="base">
                        <!--begin::Title-->
                        <span>
                            <h3 class="fs-x text-dark mt-5 mt-md-5">
                                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-list-nested" viewBox="0 0 16 16">
                                    <path fill-rule="evenodd" d="M4.5 11.5A.5.5 0 0 1 5 11h10a.5.5 0 0 1 0 1H5a.5.5 0 0 1-.5-.5zm-2-4A.5.5 0 0 1 3 7h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5zm-2-4A.5.5 0 0 1 1 3h10a.5.5 0 0 1 0 1H1a.5.5 0 0 1-.5-.5z" />
                                </svg>
                                RECEIPT LIST
                            </h3>
                        </span>
                        <!--end::Title-->
                    </div>
                    <!--end::Toolbar-->
                </div>
                <!--end::Card toolbar-->
                <!--begin::Card title-->
                <div class="card-title">
                    <!--begin::Search-->
                    <div class="d-flex align-items-center position-relative">
                        <!--begin::Svg Icon | path: icons/duotune/general/gen021.svg-->
                        <span class="svg-icon svg-icon-1 position-absolute ms-6">
                            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                <rect opacity="0.5" x="17.0365" y="15.1223" width="8.15546" height="2" rx="1" transform="rotate(45 17.0365 15.1223)" fill="currentColor" />
                                <path d="M11 19C6.55556 19 3 15.4444 3 11C3 6.55556 6.55556 3 11 3C15.4444 3 19 6.55556 19 11C19 15.4444 15.4444 19 11 19ZM11 5C7.53333 5 5 7.53333 5 11C5 14.4667 7.53333 17 11 17C14.4667 17 17 14.4667 17 11C17 7.53333 14.4667 5 11 5Z" fill="currentColor" />
                            </svg>
                        </span>
                        <!--end::Svg Icon-->
                        <input type="text" data-kt-customer-table-filter="search" class="form-control form-control-solid w-250px ps-15" placeholder="Search Receipt" id="myInput" />
                    </div>
                    <!--end::Search-->
                </div>
                <!--begin::Card title-->
            </div>
            <!--end::Card header-->
            <!--begin::Card body-->
            <div class="card-body pt-0" >
                <hr />
                <div class="" style="overflow-x:auto;">
                <!--begin::Table-->
                <table class="table align-middle table-row-dashed fs-6 gy-3 table-responsive table-responsive-md " >
                    <thead>
                        <!--begin::Table row-->
                        <tr class="text-start text-dark fw-bold fs-5 text-uppercase">
                            <th>Date</th>
                            <th>Sr. No.</th>
                            <th>Receipt Type</th>
                            <th>Receipt No.</th>
                            <th>Patient</th>
                            <th>Treatment</th>
                            <th>Amount</th>
                            <th>DateOfAdmission</th>
                            <th>DateOfDischarge</th>
                            <th>Days</th>
                            <th>Advance</th>
                            <th>Net Amount</th>
                            <th>Remarks</th>
                            <th>FinYearName</th>
                            <th>Hospital</th>
                            <th>Modified</th>
                            <th class="text-center">Action</th>
                        </tr>
                    </thead>
                    <tbody class="fw-semibold text-dark-600 font-weight-normal" id="myTable">
                        @foreach(ACC_ReceiptModel dr in ViewBag.ReceiptsList)
                        {
                            <tr>
                                <td>@dr.Date.ToString("dd-MM-yyyy")</td>
                                <td>@dr.SerialNo</td>
                                <td>@dr.ReceiptTypeName</td>
                                <td>@dr.ReceiptNo</td>
                                <td>@dr.Patient</td>
                                <td>@dr.Treatment</td>
                                <td>@dr.Amount</td>
                                <td>@dr.DateOfAdmission</td>
                                <td>@dr.DateOfDischarge</td>
                                <td>@dr.NoOfDays</td>
                                <td>@dr.Deposite</td>
                                <td>@dr.NetAmount</td>
                                <td>@dr.Remarks</td>
                                <td>@dr.FinYearName</td>
                                <td>@dr.Hospital</td>
                                <td>@dr.Modified.ToString("dd-MM-yyyy")</td>
                            </tr>
                        }
                    </tbody>
                </table>
                <!--end::Table-->
                </div>
            </div>
            <!--end::Card body-->
        </div>
        <!--end::Card-->
    </div>
    <!--end::Content container-->
</div>
<!--end::Content-->
