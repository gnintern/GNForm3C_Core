@model GNForm3C_.Areas.ACC_Receipt.Models.ACC_ReceiptModel
<form method="post">
    <div class="d-flex row">
        <!--begin::Input group-->
        <div class="col-lg-4 mb-8">
            <!--begin::Input-->
            <input type="date" class="form-control form-control-solid"
                    asp-for="FromDate" placeholder="Enter Fin Year Name"
                   autocomplete="off" />
            <!--end::Input-->
        </div>
        <!--end::Col-->
        <div class="col-lg-4 mb-8">
            <!--begin::Input-->
            <input type="date" class="form-control form-control-solid"
                    asp-for="ToDate" placeholder="Enter To Date"
                   autocomplete="off" />
            <!--end::Input-->
        </div>
        <!--end::Col-->
        <!--end::Input group-->

        <div class="col-lg-4">
            <button type="submit" class="btn btn-primary"
                    style="margin-right:15px;" asp-area="ACC_Receipt" asp-controller="ACC_Receipt" asp-action="IndexPost">
                <span class="indicator-label">Search</span>
            </button>
            <a type="submit" class="btn btn-light me-3"
              asp-area="ACC_Receipt" asp-controller="ACC_Receipt" asp-action="Index">
                Clear
            </a>
        </div>
    </div>
</form>