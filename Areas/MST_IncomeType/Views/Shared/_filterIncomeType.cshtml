@model GNForm3C_.Areas.MST_IncomeType.Models.MST_IncomeTypeModel;
<form method="post" asp-area="MST_IncomeType" asp-controller="MST_IncomeType" asp-action="Index">
    <div class="d-flex row">
        <!--begin::Input group-->
        <div class="col-lg-4 mb-8">
            <input type="search" class="form-control form-control-solid"
                   name="IncomeType"
                   asp-for="IncomeType" placeholder="Enter Income Type"
                   autocomplete="off" />
        </div>

        <!--end::Input group-->
        <div class="col-lg-4">
            <button type="submit" class="btn btn-primary" asp-area="MST_IncomeType" asp-controller="MST_IncomeType" asp-action="Index"
               style="margin-right:15px;">
                <span class="indicator-label">Search</span>
            </button>
            <a type="submit" class="btn btn-light me-3"
               asp-area="MST_IncomeType" asp-controller="MST_IncomeType" asp-action="Index">
                Clear
            </a>
        </div>
    </div>
</form>