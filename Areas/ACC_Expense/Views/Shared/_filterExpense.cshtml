@using GNForm3C_.Areas.ACC_Expense.Models;
@model GNForm3C_.Areas.ACC_Expense.Models.ACC_ExpenseModel;
@using GNForm3C_.BAL;
<form method="post">
    <div class="d-flex row">

        <!--begin::Input group-->
        <div class="row mb-8">
            <!--begin::Col-->
            <div class="col-6 col-md-6 fv-row">
                <select class="form-select form-select-solid" data-control="select2" asp-for="HospitalID" asp-items="@(new SelectList(ViewBag.HospitalDropDown,"HospitalID","Hospital"))" disabled>
                </select>
            </div>
            <!--end::Col-->
            <!--begin::Col-->
            <div class="col-6 col-md-6 fv-row">
                <select class="form-select form-select-solid" data-control="select2" asp-for="FinYearID" asp-items="@(new SelectList(ViewBag.FinYearDropDown,"FinYearID","FinYearName"))">
                    <option value="">Select Fin.Year</option>
                </select>
                <span class="text-danger field-validation-error" asp-validation-for="FinYearID"></span>
            </div>
            <!--end::Col-->
        </div>
        <!--end::Input group-->
        <!--begin::Input group-->
        <div class="row mb-8">
            <!--begin::Col-->
            <div class="col-6 col-md-6 fv-row">
                <select class="form-select form-select-solid" data-control="select2"  asp-for="ExpenseTypeID" asp-items="@(new SelectList(ViewBag.ExpenseTypeDropDown,"ExpenseTypeID","ExpenseType"))">
                    <option value="">Select Expense Type</option>
                </select>
            </div>
            <!--end::Col-->
            <!--begin::Col-->
            <div class="col-6 col-md-6 fv-row">
                <!--begin::Input-->
                <input type="text" asp-for="Amount" class="form-control form-control-solid" id="amountInput" maxlength="7" placeholder="Enter Amount" autocomplete="off" />
                <!--end::Input-->
            </div>
            <!--end::Col-->
        </div>
        <!--end::Input group-->

        <div class="col-lg-4">
            <button type="submit" class="@CommonVariables.SearchBtnColor"
                    style="margin-right:15px;" asp-area="ACC_Expense" asp-controller="ACC_Expense" asp-action="Index">
                <span class="indicator-label">Search</span>
            </button>
            <button type="submit" class="@CommonVariables.ClearBtnColor me-3"
                    asp-area="ACC_Expense" asp-controller="ACC_Expense" asp-action="Clear">
                <span class="indicator-label">Clear</span>
            </button>
        </div>
    </div>
</form>
@section scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}