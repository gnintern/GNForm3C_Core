@model GNForm3C_.Areas.ACC_Expense.Models.ACC_ExpenseModel;
@{
	ViewData["Title"] = @TempData["Action"] + " Expense";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<!--begin::Toolbar-->
<div id="kt_app_toolbar" class="app-toolbar py-3 py-lg-6">
	<!--begin::Toolbar container-->
	<div id="kt_app_toolbar_container" class="app-container container-fluid d-flex flex-stack">
		<!--begin::Page title-->
		<div class="page-title d-flex flex-column justify-content-center flex-wrap me-3">
			<!--begin::Title-->
			<h1 class="page-heading d-flex text-dark fw-bold fs-3 flex-column justify-content-center my-0">Expense</h1>
			<!--end::Title-->
			<!--begin::Breadcrumb-->
			<ul class="breadcrumb breadcrumb-separatorless fw-semibold fs-7 my-0 pt-1">

				<!--begin::Item-->
				<li class="breadcrumb-item text-muted">
					<a asp-controller="Home" asp-action="Index" class="text-muted text-hover-primary"><i class="bi bi-house"></i> Home</a>
				</li>
				<!--end::Item-->

				<!--begin::Item-->
				<li class="breadcrumb-item">
					<span class="bullet bg-gray-400 w-5px h-2px"></span>
				</li>
				<!--end::Item-->

				<!--begin::Item-->
				<li class="breadcrumb-item text-muted">
					<a asp-area="ACC_Expense" asp-controller="ACC_Expense" asp-action="Index" class="text-muted text-hover-primary">Expense</a>
				</li>
				<!--end::Item-->

				<!--begin::Item-->
				<li class="breadcrumb-item">
					<span class="bullet w-5px h-2px"></span>
				</li>
				<!--end::Item-->

				<!--begin::Item-->
				<li class="breadcrumb-item fw-bolder">@TempData["Action"] Expense</li>
				<!--end::Item-->
			</ul>
			<!--end::Breadcrumb-->
		</div>
		<!--end::Page title-->
	</div>
	<!--end::Toolbar container-->
</div>
<!--end::Toolbar-->

<form method="post" asp-area="ACC_Expense" asp-controller="ACC_Expense" asp-action="Save">
	<!--begin: Validation-->
	<div class="col-md-12 container">
		<div id="validatediv" asp-validation-summary="All" class="text-danger"></div>
	</div>
	<!--end: Validation-->
	<!--begin::Content-->
	<div id="kt_app_content" class="app-content flex-column-fluid">
		<!--begin::Content container-->
		<div id="kt_app_content_container" class="app-container container-fluid">
			<div class="card">
				<div class="card-body p-5 px-lg-10 py-lg-7">
					<div>
						@Html.HiddenFor(x=>x.ExpenseID)

						<!--begin::Input group-->
						<div class="row">
							<div class="fv-row mb-8 col-6 col-md-6">
								<!--begin::Label-->
								<label class="d-flex align-items-center fs-6 fw-semibold mb-2" asp-for="HospitalID">
									<span class="text-danger">*</span> &nbsp;Hospital Name
									<i class="fas fa-exclamation-circle ms-2 fs-7" data-bs-toggle="tooltip" title="used for select Hospital"></i>
								</label>
								<!--end::Label-->
								<div class="col-12 col-md-12 fv-row">
									<select class="form-select form-select-solid" data-control="select2"   asp-for="HospitalID" asp-items="@(new SelectList(ViewBag.HospitalDropDown,"HospitalID","Hospital"))">
										<option value="">Select Hospital</option>
									</select>
								</div>
								<span class="text-danger" asp-validation-for="HospitalID"></span>
							</div>

							<div class="fv-row mb-8 col-6 col-md-6" data-kt-password-meter="true">
								<!--begin::Label-->
								<label class="d-flex align-items-center fs-6 fw-semibold mb-2" asp-for="ExpenseTypeID">
									<span class="text-danger">*</span> &nbsp;Expense Type
									<i class="fas fa-exclamation-circle ms-2 fs-7" data-bs-toggle="tooltip" title="used for select Expense Type"></i>
								</label>
								<!--end::Label-->
								<div class="col-12 col-md-12 fv-row">
									<select class="form-select form-select-solid" data-control="select2"  data-placeholder="Select Expense Type" asp-for="ExpenseTypeID" asp-items="@(new SelectList(ViewBag.ExpenseTypeDropDown,"ExpenseTypeID","ExpenseType"))">
										<option value="">Select Expense Type</option>
									</select>
								</div>
								<span class="text-danger" asp-validation-for="ExpenseTypeID"></span>
							</div>
						</div>
						<!--end::Input group-->
						<!--begin::Input group-->
						<div class="row">
							<div class="fv-row mb-8 col-6 col-md-6">
								<!--begin::Label-->
								<label class="d-flex align-items-center fs-6 fw-semibold mb-2" asp-for="Date">
									<span class="text-danger">*</span> &nbsp;Expense Date
									<i class="fas fa-exclamation-circle ms-2 fs-7" data-bs-toggle="tooltip" title="used for select Date"></i>
								</label>
								<!--end::Label-->
								<div class="col-12 col-md-12 fv-row">
									<input type="date"  asp-for="Date" class="form-control form-control-solid" />
								</div>
								<span class="text-danger" asp-validation-for="Date"></span>
							</div>

							<div class="fv-row mb-8 col-6 col-md-6" data-kt-password-meter="true">
								<!--begin::Label-->
								<label class="d-flex align-items-center fs-6 fw-semibold mb-2" asp-for="Amount">
									<span class="text-danger">*</span> &nbsp;Amount
									<i class="fas fa-exclamation-circle ms-2 fs-7" data-bs-toggle="tooltip" title="used for Enter Amount"></i>
								</label>
								<!--end::Label-->
								<div class="col-12 col-md-12 fv-row">
									<input type="number" asp-for="Amount" class="form-control form-control-solid" placeholder="Enter Amount" autocomplete="off" />
								</div>
								<span class="text-danger" asp-validation-for="Amount"></span>
							</div>
						</div>
						<!--end::Input group-->
						<!--begin::Input group-->
						<div class="d-flex flex-column mb-8 fv-row">
							<!--begin::Label-->
							<label class="d-flex align-items-center fs-6 fw-semibold mb-2">
								Note
								<i class="fas fa-exclamation-circle ms-2 fs-7" data-bs-toggle="tooltip" title="it accepts only unique user name"></i>
							</label>
							<!--end::Label-->
							<textarea type="text" asp-for="Note" class="form-control form-control-solid" autocomplete="off" placeholder="Write your Notes Here..."></textarea>
							<span class="text-danger"></span>
						</div>
						<!--end::Input group-->
						<!--begin::Actions-->
						<div>
							<button onclick="fn1()" type="submit" class="btn btn-primary" style="margin-right:5px;">
								<span class="indicator-label">Submit</span>
							</button>
							<a type="submit" class="btn btn-light me-3" asp-area="ACC_Expense" asp-controller="ACC_Expense" asp-action="Index">
								Back to List
							</a>
						</div>
						<!--end::Actions-->
					</div>
				</div>
			</div>
		</div>
		<!--end::Content container-->
	</div>
	<!--end::Content-->
</form>
@section Scripts{
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}

	<script>
		function fn1() {
			const hospitalIDInput = document.getElementById('HospitalID');
			const ExpenseTypeIDInput = document.getElementById('ExpenseTypeID');
			const DateInput = document.getElementById('Date');
			const AmountInput = document.getElementById('Amount');

			// Check if all input fields have values
			if (hospitalIDInput.value && ExpenseTypeIDInput.value && DateInput.value && AmountInput.value) {
				// All fields are filled, so don't show validation line
				document.getElementById('validatediv').classList.remove('alert alert-danger');
			} else {
				// At least one field is empty, so show validation line
				document.getElementById('validatediv').classList = "alert alert-danger";
			}
		}
	</script>
}

