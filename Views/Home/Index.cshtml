        <!---------- Hospital & Treatment Recent Add start ---------->

        <div class="mt-3">
            <div class="row">
                <div class="col-6">
                    <div class="card recent-sales">

                        <div class="card-body">

                            <div class="card-title d-flex align-middle" style="align-items:center;justify-content:center;">
                                <h3 class="fs-x text-dark mt-2">
                                    <img src="~/Theme//assets/media/svg/recent-svgrepo-com.svg" height="18" width="18" />

                                    Recently Added Transaction
                                </h3>
                                <a class=" text-end  btn btn-success btn-sm text-light rounded-pill fw-bold" style="color:#444444; margin-left:auto;" asp-area="ACC_Receipt" asp-controller="ACC_Receipt" asp-action="Add" target="_blank">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" fill="currentColor" class="bi bi-plus-lg" viewBox="0 0 16 16">
                                        <path fill-rule="evenodd" d="M8 2a.5.5 0 0 1 .5.5v5h5a.5.5 0 0 1 0 1h-5v5a.5.5 0 0 1-1 0v-5h-5a.5.5 0 0 1 0-1h5v-5A.5.5 0 0 1 8 2" />
                                    </svg> Add New Transaction
                                </a>
                            </div>

                            <hr />
                            <div class="overflow-auto">
                                <table class="table table-hover table-striped mt-3 " id="">
                                    <thead>
                                        <tr class="text-start text-dark fw-bold fs-4 gs-0">
                                            <th class="text-center min-w-100px">Date</th>
                                            <th class="text-center min-w-100px">Serial No.</th>
                                            <th class="text-center min-w-150px">Receipt No.</th>
                                            <th class="text-center min-w-100px">Patient</th>
                                            <th class="text-center min-w-125px">Receipt Type</th>
                                            <th class="text-center min-w-150px">Financial Year</th>
                                            <th class="text-center min-w-125px">Hospital</th>
                                            @* <th class="text-center">Date Of Admission</th> *@
                                            @* <th class="text-center">Date Of Discharge</th> *@
                                            @* <th class="text-center">No. Of Days</th> *@
                                            <th class="text-center min-w-80px">Deposite</th>
                                            <th class="text-center min-w-80px">Amount</th>
                                            <th class="text-center min-w-150px">Net Amount</th>
                                            <th class="text-center min-w-125px">Treatment</th>
                                            @* <th class="text-center">Remarks</th> *@

                                        </tr>
                                    </thead>
                                    <tbody>

                                        @foreach(DataRow row in Model.DataTableReceipt.Rows)
                                        {
                                            <tr>
                                                @foreach(var cell in row.ItemArray)
                                                {
                                                    <td class="text-center">
                                                        @if(cell is DateTime)
                                                        {
                                                            @(((DateTime)cell).ToShortDateString())
                                                        }
                                                        else
                                                        {
                                                            @cell.ToString()
                                                        }
                                                    </td>
                                                }
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>

                        </div>

                    </div>
                </div>
                <div class="col-6">
                    <div class="card recent-sales overflow-auto">

                        <div class="card-body">

                            <div class="card-title d-flex align-middle" style="">
                                <h3 class="fs-x text-dark mt-2">
                                    <img src="~/Theme//assets/media/svg/recent-svgrepo-com.svg" height="18" width="18" />

                                    Recently Added Treatment
                                </h3>
                                <a class="text-end  btn btn-success btn-sm text-light rounded-pill fw-bold" style="color:#444444; margin-left:auto;" asp-area="MST_Treatment" asp-controller="MST_Treatment" asp-action="Add" target="_blank">
