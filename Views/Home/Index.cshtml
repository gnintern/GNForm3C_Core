@section scripts{
    
    <script>
        $(document).ready(function () {
            // Function to initialize Counter Up for a given element ID
            function initializeCounter(id) {
                var countValue = parseInt($(id).text().trim());

                if (!isNaN(countValue)) {
                    $(id).text(countValue);
                    $(id).counterUp({
                        delay: 5,
                        time: 1000
                    });
                }
            }

            // Initialize Counter Up for each counter element
            initializeCounter('#hospitalCounter');
            initializeCounter('#treatmentCounter');
            initializeCounter('#incomeCounter');
            initializeCounter('#expenseCounter');
        });
    </script>
    }