		<!---------- Hospital & Treatment Recent Add start ---------->

		<div class="mt-3">
			<div class="row">
				<div class="col-6">
					<div class="card recent-sales">

						<div class="card-body overflow-auto">
							<h5 class="card-title d-flex pb-5" style="align-items:center;">
								<span class="position-absolute start-0 px-3"><img src="~/Theme//assets/media/svg/recent-svgrepo-com.svg" height="18" width="18" />  <span class="google-font fs-5">Recently Added Transaction</span></span>
								<a class="position-absolute text-end end-0 mx-3 btn btn-success btn-sm text-light rounded-pill fw-bold" style="color:#444444" asp-area="ACC_Receipt" asp-controller="ACC_Receipt" asp-action="Add" target="_blank">
									<svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" fill="currentColor" class="bi bi-plus-lg" viewBox="0 0 16 16">
										<path fill-rule="evenodd" d="M8 2a.5.5 0 0 1 .5.5v5h5a.5.5 0 0 1 0 1h-5v5a.5.5 0 0 1-1 0v-5h-5a.5.5 0 0 1 0-1h5v-5A.5.5 0 0 1 8 2" />
									</svg> Add New Transaction
								</a>
							</h5>
							<hr class="" style="width:75vw;" />
							<table class="table table-hover table-striped mt-3" id="myTable">
								<thead>
									<tr>
										<th class="text-center">Date</th>
										<th class="text-center">SerialNo</th>
										<th class="text-center">Receipt Type Name</th>
										<th class="text-center">Financial Year Name</th>
										<th class="text-center">Hospital</th>
										<th class="text-center">Date Of Admission</th>
										<th class="text-center">Date Of Discharge</th>
										<th class="text-center">No. Of Days</th>
										<th class="text-center">Deposite</th>
										<th class="text-center">Amount</th>
										<th class="text-center">Net Amount</th>
										<th class="text-center">Patient</th>
										<th class="text-center">Treatment</th>
										<th class="text-center">Receipt No.</th>
										<th class="text-center">Remarks</th>

									</tr>
								</thead>
								<tbody>

									@foreach(DataRow row in Model.DataTableReceipt.Rows)
									{
										<tr>
											@foreach(var cell in row.ItemArray)
											{
												<td class="text-center">@cell.ToString()</td>
											}
										</tr>
									}
								</tbody>
							</table>

						</div>

					</div>
				</div>
				<div class="col-6">
					<div class="card recent-sales overflow-auto">

						<div class="card-body">
							<h5 class="card-title d-flex pb-5" style="align-items:center;">
