                                        <path fill-rule="evenodd" d="M8 2a.5.5 0 0 1 .5.5v5h5a.5.5 0 0 1 0 1h-5v5a.5.5 0 0 1-1 0v-5h-5a.5.5 0 0 1 0-1h5v-5A.5.5 0 0 1 8 2" />
                                    </svg> Add New Treatment
                                </a>
                            </div>
                            <hr />
                            <table class=" table table-hover table-striped mt-3" id="">
                                <thead>
                                    <tr class="text-start text-dark fw-bold fs-4 gs-0">
                                        <th class="text-center">Treatment</th>
                                        <th class="text-center">Remarks</th>
                                        <th class="text-center">Hospital</th>
                                        <th class="text-center min-w-125px">Modified Date</th>
                                    </tr>
                                </thead>
                                <tbody>

                                    @foreach(DataRow row in Model.DataTableTreatment.Rows)
                                    {
                                        <tr>
                                            @foreach(var cell in row.ItemArray)
                                            {
                                                <td class="text-center">
                                                    @if(cell is DateTime)
                                                    {
                                                        @(((DateTime)cell).ToShortDateString())
                                                    }
                                                    else
                                                    {
                                                        @cell.ToString()
                                                    }
                                                </td>
                                            }
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                    </div>
                </div>
            </div>
        </div>

