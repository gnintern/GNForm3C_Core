										<th class="text-center">Remarks</th>
										<th class="text-center">Hospital</th>
										<th class="text-center">Modified Date</th>
									</tr>
								</thead>
								<tbody>

									@foreach(DataRow row in Model.DataTableTreatment.Rows)
									{
										<tr>
											@foreach(var cell in row.ItemArray)
											{
												<td class="text-center">@cell.ToString()</td>
											}
										</tr>
									}
								</tbody>
							</table>
						</div>

					</div>
				</div>
			</div>
		</div>

